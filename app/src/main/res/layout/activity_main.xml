<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1080px"
    android:layout_height="732dp"
    android:background="@color/backgroundColor"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="170dp"
        android:layout_marginRight="200dp"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:drawableLeft="@drawable/icon_user"
        android:hint="hello2009@gmail.com"
        android:textColorHint="#595971"
        android:backgroundTint="#959595"
        android:id="@+id/emailInput"
        app:layout_constraintTop_toBottomOf="@+id/titleLogin"
        tools:layout_editor_absoluteX="55dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/icon_password"
        android:hint="*******"
        android:textColorHint="#595971"
        android:backgroundTint="#959595"
        android:id="@+id/passwordInput"
        app:layout_constraintTop_toBottomOf="@+id/emailInput"
        tools:layout_editor_absoluteX="55dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        android:text="LOGIN"
        android:textSize="20dp"
        android:background="@drawable/gradient"
        app:layout_constraintTop_toBottomOf="@+id/passwordInput"
        tools:layout_editor_absoluteX="55dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/alternativeSolution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Don't have an account?"
        android:textColor="#595971"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15px"
        android:text="Register"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin"
        app:layout_constraintStart_toEndOf="@+id/alternativeSolution"
        />


    <View
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/dark_balls"
        android:id="@+id/topBall"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:background="@drawable/gradient"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="220dp"
        tools:layout_editor_absoluteY="-100dp" />

    <View
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/dark_balls"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/smallBall"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="75dp" />

    <View
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/dark_balls"
        app:layout_constraintTop_toTopOf="@id/smallBall"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="270dp" />

</androidx.constraintlayout.widget.ConstraintLayout>